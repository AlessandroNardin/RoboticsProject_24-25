# Doxyfile 1.9.2

#---------------------------------------------------------------------------
# Project related configuration options
#---------------------------------------------------------------------------

# The PROJECT_NAME tag is a single word (or a sequence of words surrounded 
# by quotes) that should identify the project.
PROJECT_NAME           = "Robotics Megablock Project"

# The PROJECT_BRIEF tag can be used to provide a short description of the project.
PROJECT_BRIEF          = "Fondamentals of Robotics 2024-2025 course project"

# The PROJECT_NUMBER tag can be used to enter a project or revision number.
PROJECT_NUMBER         = "1.0"

#---------------------------------------------------------------------------
# Build related configuration options
#---------------------------------------------------------------------------

# The OUTPUT_DIRECTORY tag is used to specify the (relative or absolute) path 
# into which the generated documentation will be written.
OUTPUT_DIRECTORY       = docs

#---------------------------------------------------------------------------
# Configuration options related to the input files
#---------------------------------------------------------------------------

# The INPUT tag is used to specify the directories from which the documentation
# should be read. In your case, all source code is inside the src folder.
INPUT                  = src mainpage.dox

# The FILE_PATTERNS tag can be used to specify one or more wildcard patterns 
# (like *.cpp and *.py) to filter out the source-files in the directories.
FILE_PATTERNS          = *.cpp *.py

# If the value of the RECURSIVE tag is set to YES, then subdirectories will be
# searched for input files to be processed.
RECURSIVE              = YES

#---------------------------------------------------------------------------
# Configuration options related to source browsing
#---------------------------------------------------------------------------

# If the SOURCE_BROWSER tag is set to YES then a list of source files will be 
# generated. Documented entities will be cross-referenced with these sources.
SOURCE_BROWSER         = YES

#---------------------------------------------------------------------------
# Configuration options related to the output formats
#---------------------------------------------------------------------------

# If the GENERATE_HTML tag is set to YES, doxygen will generate HTML output.
GENERATE_HTML          = YES

# The HTML_OUTPUT tag is used to specify where the HTML docs will be put.
HTML_OUTPUT            = html

# If the GENERATE_LATEX tag is set to YES, doxygen will generate LaTeX output.
GENERATE_LATEX         = YES

# The LATEX_OUTPUT tag is used to specify where the LaTeX docs will be put.
LATEX_OUTPUT           = latex

#---------------------------------------------------------------------------
# Configuration options related to the extraction process
#---------------------------------------------------------------------------

# If the EXTRACT_ALL tag is set to YES doxygen will assume all entities in 
# documentation are documented, even if no documentation was available.
EXTRACT_ALL            = NO

#---------------------------------------------------------------------------
# Configuration options related to programming language specifics
#---------------------------------------------------------------------------

# To enable extraction of documentation from Python source files, we need to map
# the .py extension to Python.
EXTENSION_MAPPING      = py=Python

#---------------------------------------------------------------------------
# Miscellaneous configuration options
#---------------------------------------------------------------------------

# Set to YES to include source code in the documentation.
INLINE_SOURCES         = YES

# If the STRIP_CODE_COMMENTS tag is set to YES then doxygen will hide any special
# comment blocks from the source code in the output.
STRIP_CODE_COMMENTS    = YES

#---------------------------------------------------------------------------
# End of Doxyfile
#---------------------------------------------------------------------------

